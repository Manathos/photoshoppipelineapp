<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Font sizes -->
    <sys:Double x:Key="PageTitleFontSize" xmlns:sys="clr-namespace:System;assembly=System.Runtime">18</sys:Double>
    <sys:Double x:Key="SectionHeaderFontSize" xmlns:sys="clr-namespace:System;assembly=System.Runtime">14</sys:Double>
    <sys:Double x:Key="BodyFontSize" xmlns:sys="clr-namespace:System;assembly=System.Runtime">12</sys:Double>
    <sys:Double x:Key="SmallFontSize" xmlns:sys="clr-namespace:System;assembly=System.Runtime">11</sys:Double>
    <sys:Double x:Key="ButtonFontSize" xmlns:sys="clr-namespace:System;assembly=System.Runtime">13</sys:Double>

    <!-- Spacing -->
    <Thickness x:Key="PagePadding">16</Thickness>
    <Thickness x:Key="CardPadding">12</Thickness>
    <Thickness x:Key="SectionSpacing">12</Thickness>
    <Thickness x:Key="LabelMargin">0,0,0,4</Thickness>

    <!-- Drop zone brushes -->
    <SolidColorBrush x:Key="DropZoneIdleBorder" Color="#606060"/>
    <SolidColorBrush x:Key="DropZoneIdleBackground" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="DropZoneDragOverBorder" Color="#0078D4"/>
    <SolidColorBrush x:Key="DropZoneDragOverBackground" Color="#1A3A52"/>

    <!-- Card / section -->
    <SolidColorBrush x:Key="CardBorderBrush" Color="#404040"/>
    <SolidColorBrush x:Key="CardBackground" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="CardInnerBackground" Color="#252525"/>

    <!-- Compact button style with hover (extends theme; only tightens size + optional hover) -->
    <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Padding" Value="8,12"/>
        <Setter Property="FontSize" Value="{StaticResource ButtonFontSize}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.92"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Optional: TabItem style for tighter tabs -->
    <Style x:Key="TabItemStyle" TargetType="TabItem">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
    </Style>
</ResourceDictionary>
