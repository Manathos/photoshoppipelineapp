<UserControl x:Class="PhotoshopPipelineApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,16"/>
            <Border Margin="0,0,0,16" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="#404040" Background="#2D2D2D">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Button x:Name="StartButton" Content="Start pipeline" Click="StartButton_Click" Margin="0,0,12,0"/>
                        <Button x:Name="StopButton" Content="Stop pipeline" Click="StopButton_Click" IsEnabled="False"/>
                    </StackPanel>
                    <TextBlock x:Name="StatusSummaryText" Text="Status: Idle" FontSize="14" Opacity="0.9" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="QueueStatusItems">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,4" Padding="8" CornerRadius="4" BorderThickness="1" BorderBrush="#404040" Background="#252525">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding QueueName}" FontWeight="SemiBold" MinWidth="120"/>
                                        <TextBlock Text="{Binding Status}" Margin="8,0,0,0" Opacity="0.9"/>
                                        <TextBlock Text="{Binding LastFileDisplay}" Margin="8,0,0,0" Opacity="0.8" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            <TextBlock Text="Drop zones" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ItemsControl x:Name="DropZonesItems"/>
            <TextBlock Text="Log" FontSize="18" FontWeight="SemiBold" Margin="0,16,0,8"/>
            <Border BorderBrush="#404040" BorderThickness="1" CornerRadius="4" Padding="12" Background="#2D2D2D">
                <ScrollViewer x:Name="LogScroll" VerticalScrollBarVisibility="Auto" MaxHeight="320">
                    <TextBox x:Name="LogTextBox" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" BorderThickness="0" Background="Transparent" FontFamily="Consolas" FontSize="12" MinHeight="200"/>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
